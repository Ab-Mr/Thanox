<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/switch_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Switch"
        android:textColor="?switchBarTextColor"
        tools:text="Label" />

    <github.tornaco.android.thanos.widget.ToggleSwitch
        android:id="@+id/switch_widget"
        style="?switchBarTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:thumb="@drawable/module_common_switch_thumb_material_oos"
        android:track="@drawable/module_common_switch_track_material_oos" />

</merge>

