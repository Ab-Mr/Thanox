<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="dashboard_tile_text_size">16sp</dimen>
    <dimen name="dashboard_tile_text_size_small">14sp</dimen>

    <!-- Dashboard margins between each tiles within the layout -->
    <dimen name="dashboard_cell_gap_x">0dp</dimen>
    <dimen name="dashboard_cell_gap_y">0dp</dimen>

    <!-- Dashboard padding in its container -->
    <dimen name="dashboard_padding_start">3dp</dimen>
    <dimen name="dashboard_padding_end">3dp</dimen>
    <dimen name="dashboard_padding_top">3dp</dimen>
    <dimen name="dashboard_padding_bottom">3dp</dimen>

    <!-- Dashboard category padding start / end -->
    <dimen name="dashboard_category_padding_start">0dp</dimen>
    <dimen name="dashboard_category_padding_end">0dp</dimen>

    <!-- Dashboard category bot margin -->
    <dimen name="dashboard_category_bot_margin">5dp</dimen>

    <!-- Dashboard category panel elevation -->
    <dimen name="dashboard_category_elevation">1dp</dimen>
    <dimen name="dashboard_category_radius">2dp</dimen>

    <!-- Dashboard category title layout height -->
    <dimen name="dashboard_category_title_height">48dp</dimen>

    <!-- Dashboard category title margin start -->
    <dimen name="dashboard_category_title_margin_start">16dp</dimen>
    <dimen name="dashboard_category_title_margin_end">16dp</dimen>

    <!-- Dashboard tile minimum height -->
    <dimen name="dashboard_tile_minimum_height">72dp</dimen>

    <!-- Dashboard tile minimum height small -->
    <dimen name="dashboard_tile_minimum_height_small">56dp</dimen>

    <!-- Dashboard image tile size -->
    <dimen name="dashboard_tile_image_size">24dp</dimen>
    <dimen name="dashboard_tile_image_size_large">32dp</dimen>

    <dimen name="dashboard_card_start_margin">10dp</dimen>
    <dimen name="dashboard_card_top_margin">10dp</dimen>

    <!-- Dashboard tile image margin start / end -->
    <dimen name="dashboard_tile_image_padding">0dp</dimen>
    <dimen name="dashboard_tile_image_margin_start">16dp</dimen>
    <dimen name="dashboard_tile_image_margin_end">12dp</dimen>

    <dimen name="dashboard_tile_divider_margin_start">48dp</dimen>
    <dimen name="dashboard_tile_divider_height">1dp</dimen>

    <dimen name="dashboard_tile_action_margin">24dp</dimen>

    <style name="TextAppearance.TileTitle" parent="TextAppearance.Medium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/dashboard_tile_text_size</item>
    </style>

    <style name="TextAppearance.TileSubTitle" parent="TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>