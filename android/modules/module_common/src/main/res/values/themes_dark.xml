    <style name="AppThemeDark" parent="Theme.Material3.Dark">
        <item name="colorAccent">@color/md_blue_a700</item>
        <item name="colorPrimaryContainer">@color/md_grey_800</item>

        <item name="colorPrimary">?colorAccent</item>
        <item name="colorPrimaryDark">?colorPrimary</item>
        <item name="colorPrimaryVariant">?colorPrimary</item>
        <item name="colorOnPrimary">@color/md_grey_900</item>
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorSecondaryContainer">?colorPrimaryContainer</item>
        <item name="colorSecondaryVariant">?colorPrimary</item>
        <item name="colorOnSecondary">?colorOnPrimary</item>
        <item name="colorTertiary">?colorPrimary</item>
        <item name="colorOnTertiary">?colorOnPrimary</item>
        <item name="colorError">@color/md_red_500</item>

        <item name="colorSurface">@color/md_dark</item>
        <item name="colorOnSurface">@color/md_grey_350</item>
        <item name="appCardBackground">@color/md_dark</item>
        <item name="progressTrackColor">@color/md_grey_800</item>
        <item name="progressColor">?colorAccent</item>

        <item name="appbarPopupTheme">@style/PopupOverlay</item>
        <item name="appbarTheme">@style/AppBarOverlay</item>
        <item name="toolbarTheme">@style/ToolbarThemeCommon</item>
        <item name="collapsingToolbarTheme">@style/CollapsingToolbarThemeCommon</item>
        <item name="android:windowBackground">@color/md_black</item>
        <item name="alertDialogTheme">@style/DialogThemeCommon</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/md_dark</item>
        <item name="android:navigationBarColor">@color/md_dark</item>
        <item name="switchPreferenceCompatStyle">@style/SwitchPrefTheme</item>
        <item name="preferenceFragmentCompatStyle">@style/PrefFragmentCompatThemeCommon</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

