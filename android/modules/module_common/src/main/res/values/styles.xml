<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="TextAppearance.CategoryTitle" parent="TextAppearance.Small">
    <!--<item name="android:textColor">?colorAccent</item>-->
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TextAppearance.Medium" parent="@style/TextAppearance.AppCompat.Medium" />

  <style name="TextAppearance.Small" parent="@style/TextAppearance.AppCompat.Small" />

  <style name="TextAppearance.Switch" parent="TextAppearance.Small" />

  <style name="TextAppearance.Small.SwitchBar">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textStyle">normal</item>
  </style>

  <!-- Used to color the switch bar controls -->
  <style name="ThemeOverlay.SwitchBar" parent="ThemeOverlay.AppCompat">
    <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
    <item name="colorAccent">?attr/colorAccent</item>
  </style>

  <style name="SwitchBarTheme" parent="Widget.AppCompat.ActionBar">
    <item name="switchBarMarginStart">@dimen/common_view_margin_default</item>
    <item name="switchBarMarginEnd">@dimen/common_view_margin_default</item>
    <item name="switchBarBackgroundColorChecked">@color/md_grey_800</item>
    <item name="switchBarBackgroundColor">@color/md_grey_800</item>
    <item name="switchBarTextColor">@color/md_white</item>
  </style>

  <style name="SwitchBarTheme.Light">
    <item name="switchBarBackgroundColor">@color/md_grey_300</item>
    <item name="switchBarBackgroundColorChecked">@color/md_grey_300</item>
    <item name="switchBarTextColor">@color/md_black</item>
  </style>

  <style name="ToolbarThemeCommon">
    <item name="colorControlNormal">?menuIconTint</item>
    <!--<item name="colorControlActivated">?torMenuIconTintColor</item>-->
    <item name="android:colorControlNormal">?menuIconTint</item>
    <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    <!--<item name="android:colorControlActivated">?torMenuIconTintColor</item>-->
  </style>

  <!-- This style is where you define the tint color of your overflow menu button -->
  <style name="OverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
    <item name="android:tint">?menuIconTint</item>
  </style>

  <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" >
    <item name="android:homeAsUpIndicator">@drawable/module_common_ic_home_as_up</item>
  </style>

  <style name="PopupOverlay" parent="ThemeOverlay.AppCompat" />

  <style name="AppBarOverlayLight" parent="ThemeOverlay.AppCompat.ActionBar" >
    <item name="android:homeAsUpIndicator">@drawable/module_common_ic_home_as_up</item>
  </style>

  <style name="PopupOverlayLight" parent="ThemeOverlay.AppCompat" />


  <style name="SwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">

  </style>

  <style name="SwitchPrefTheme" parent="@style/Preference.SwitchPreferenceCompat.Material">
    <item name="android:widgetLayout">@layout/preference_widget_switch_compat_oos</item>
  </style>

  <style name="FilterChipTheme" parent="@style/Widget.MaterialComponents.Chip.Choice">
    <item name="android:textColor">@color/choice_chip_text_color</item>
    <item name="chipBackgroundColor">@color/choice_chip_background_color</item>
    <item name="rippleColor">@color/mtrl_choice_chip_ripple_color</item>
  </style>

  <style name="ActionChipTheme" parent="@style/Widget.MaterialComponents.Chip.Action">
    <item name="android:textColor">@color/choice_chip_text_color</item>
    <item name="chipBackgroundColor">@color/choice_chip_background_color</item>
    <item name="rippleColor">@color/mtrl_choice_chip_ripple_color</item>
  </style>

  <style name="MaterialButtonBadged" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:insetBottom">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetLeft">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:textSize">10sp</item>
    <item name="strokeColor">?menuIconTint</item>
    <item name="android:textColor">?menuIconTint</item>
  </style>

  <style name="MaterialButtonBadged.Red" >
    <item name="strokeColor">@color/md_red_500</item>
    <item name="android:textColor">@color/md_red_500</item>
  </style>

  <style name="MaterialButtonBadged.Amber" >
    <item name="strokeColor">@color/md_amber_600</item>
    <item name="android:textColor">@color/md_amber_600</item>
  </style>

  <style name="MaterialButtonBadged.Grey" >
    <item name="strokeColor">@color/md_grey_500</item>
    <item name="android:textColor">@color/md_grey_500</item>
  </style>

  <style name="MaterialButtonBadged.Blue" >
    <item name="strokeColor">@color/md_blue_a700</item>
    <item name="android:textColor">@color/md_blue_a700</item>
  </style>
</resources>