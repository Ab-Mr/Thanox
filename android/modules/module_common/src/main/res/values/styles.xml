<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.CategoryTitle" parent="TextAppearance.Small">
        <!--<item name="android:textColor">?colorAccent</item>-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Medium" parent="@style/TextAppearance.AppCompat.Medium" />

    <style name="TextAppearance.Small" parent="@style/TextAppearance.AppCompat.Small" />

    <style name="TextAppearance.Switch" parent="TextAppearance.Medium" />

    <style name="TextAppearance.Small.SwitchBar">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarThemeCommon">
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="CollapsingToolbarThemeCommon" parent="Widget.AppCompat.Toolbar">
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="AppBarOverlayLight" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/module_common_ic_home_as_up</item>
    </style>

    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="OverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorControlNormal</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/module_common_ic_home_as_up</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="PopupOverlayLight" parent="ThemeOverlay.AppCompat" />


    <style name="FilterChipTheme" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/choice_chip_text_color</item>
        <item name="chipBackgroundColor">@color/choice_chip_background_color</item>
        <item name="rippleColor">@color/mtrl_choice_chip_ripple_color</item>
    </style>

    <style name="ActionChipTheme" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/choice_chip_text_color</item>
        <item name="chipBackgroundColor">@color/choice_chip_background_color</item>
        <item name="rippleColor">@color/mtrl_choice_chip_ripple_color</item>
    </style>

    <style name="MaterialButtonBadged" parent="Widget.Material3.Badge">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="backgroundTint">?colorAccent</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MaterialButtonBadged.Error">
        <item name="backgroundTint">?colorError</item>
    </style>

    <style name="MaterialButtonBadged.Grey">
        <item name="backgroundTint">@color/md_grey_600</item>
    </style>

    <style name="ToolbarCollapsedTitleTextAppearance" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="ToolbarExpandedTitleTextAppearance" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="DialogThemeCommon" parent="@style/MaterialAlertDialog.Material3" />

    <style name="PrefFragmentCompatThemeCommon" parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/preference_list_with_fab_fragment</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:tint">?colorPrimary</item>
        <item name="elevation">@dimen/common_toolbar_elevation</item>
        <item name="iconTint">?colorPrimary</item>
    </style>
</resources>